.header_author
	//display flex
	//justify-content flex-start
	margin 20px 5px
	padding 10px
	border 1px solid lightgrey
	&-container
		width 100%
	&-main
		display flex
	&-avatar
		width 150px
		height 150px
		padding 5px
		margin 0 !important
		box-shadow 0px 0px 3px grey
		border-radius 50%
		img
			width 100%
			height 100%
			border-radius 50%

	&-info
		text-align left
		margin-left 20px
		&-bio
			text-align left
		a
			text-decoration none
			color cornflowerblue
			font-weight 500
		h4
			margin-bottom 7px
		p
			margin 0
			color grey