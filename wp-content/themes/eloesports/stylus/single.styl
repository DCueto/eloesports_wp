
// ESTILOS DE SINGLE.PHP

.main__single
	display flex
	.last_posts
		width 350px
		flex-shrink 0
		flex-grow 0
		margin-left 60px
		height 100vh
		overflow hidden
		position relative
		&-container
			height 100%
			position fixed
			top 55px
			width 350px
			background #ececec
			.scroll-container
				overflow-y scroll
				height 90%
		&-title
			background-color #d0d0d0
			margin 0
			padding 5px 0
		&-post
			text-align left
			border-bottom 1px solid lightgrey
			padding 10px
			a
				text-decoration none
				color black
			&-info
				display flex
				color #4d4d4d
				font-weight 600
				font-size 17px
				justify-content space-between
				p
					margin-bottom 0
			&-title
				font-size 17
				font-weight 400
			p
				//margin 12px 0
.single
	text-align left
	width 100%
	font-size 17px
	line-height 24px
	a
		text-decoration none
		color cornflowerblue
	&-article
		&-title
			font-family 'Roboto Condensed'
			font-size 60px
			margin 40px 0 0 0
			font-weight 400
			line-height 1.05
		&-info
			display flex
			font-size 16px
			.by
				margin-right 4px
				color gray
			&-author
				font-weight 500
			&-date
				margin-left 10px
				color #a2a2a2

.footer-single
	width 70% !important

@media screen and (max-width: 1080px)
	.main__single
		margin-left 20px
		margin-right 20px
	
	.last_posts
		display none
	
	.footer-single
		width 100% !important
		

@media screen and (max-width: 690px)
	.copyright
		flex-direction column
		padding 14px 0